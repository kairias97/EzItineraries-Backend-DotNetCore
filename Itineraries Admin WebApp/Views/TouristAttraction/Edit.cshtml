
@{
    ViewData["Title"] = "Actualización de atracción turística";
}

@model TouristAttraction
<h3>Actualización de atracción turística</h3>
<form asp-action="Update" method="post">
    @if (ViewBag.Updated ?? false)
    {
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <p>Atracción turística actualizada exitosamente</p>

        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    }
        <input type="number" asp-for="@Model.Id" hidden/>
    <div class="form-row">
        <div class="form-group col-md-5">
            <label name="CountryId" for="countrySelect">País</label>
            <input type="text" value="@Model.City?.Country?.Name" required readonly class="form-control"/>
            
        </div>
        <div class="form-group offset-md-1 col-md-5">
            <label for="Attraction_CityId">Ciudad</label>

            <input type="text" value="@Model.City?.Name" required readonly class="form-control" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-5">
            <label for="Attraction_Name">Nombre de la atracción turística</label>
            <input type="text" asp-for="@Model.Name"  readonly class="form-control"/>
        </div>
        <div class="form-group offset-md-1 col-md-5">

            <label for="Attraction_Address">Dirección de la atracción turística</label>
            <textarea asp-for="@Model.Address" readonly class="form-control"></textarea>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-5">

            <label for="Attraction_Geoposition_Latitude">Latitud</label>
            <input type="number" step="0.00000000000001" asp-for="@Model.Geoposition.Latitude" readonly class="form-control"/>
        </div>
        <div class="form-group offset-md-1 col-md-5">
            <label for="Attraction_Geoposition_Longitude">Longitud</label>
            <input type="number" step="0.00000000000001" asp-for="@Model.Geoposition.Longitude" readonly class="form-control"/>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-5">
            <label for="Attraction_GooglePlaceId">Google Place Id</label>
            <input type="text" asp-for="@Model.GooglePlaceId" readonly class="form-control"/>
        </div>
        <div class="form-group offset-md-1 col-md-5">
            <label name="Attraction_CategoryId" for="countrySelect">Categoría</label>
            <input type="text" value="@Model.Category?.Name" required readonly class="form-control" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-5">
            <label for="Attraction_WebsiteUrl">URL Sitio web</label>
            <input type="text" asp-for="@Model.WebsiteUrl" class="form-control" />
        </div>
        <div class="form-group offset-md-1 col-md-5">
            <label for="Attraction_PhoneNumber">Número de teléfono para la atracción</label>
            <input type="text" asp-for="@Model.PhoneNumber" class="form-control" />
        </div>

    </div>
    <div class="form-row">
        <div class="form-group col-md-5">
            <label for="Attraction_Rating">Rating</label>
            <input type="number" step="0.01" asp-for="@Model.Rating" class="form-control" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Guardar cambios</button>
</form>
<br />
