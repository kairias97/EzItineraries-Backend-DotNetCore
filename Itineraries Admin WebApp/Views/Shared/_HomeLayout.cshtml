<!DOCTYPE html>

<html>
<head>
    @*<meta name="viewport" content="width=device-width" />*@
    <meta name="viewport" content="width=device-width">
    <title>@ViewBag.Title</title>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

    <link rel="stylesheet" asp-href-include="/css/*.css" />
    <link href="~/lib/@@fortawesome/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet"
          asp-href-include="/lib/bootstrap/dist/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid" />
    <script type="text/javascript" src="~/js/index.js"></script>
    <link asp-href-include="/lib/jquery-ui/themes/base/*.css" rel="stylesheet" />
    @*<link href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" rel="stylesheet" />*@
    @*<script src="~/lib/jquery-ui/ui/widgets/autocomplete.js" type="text/javascript"></script>*@
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2-bootstrap-theme/0.1.0-beta.10/select2-bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript">
        $(function () {
            $('.js-example-basic-single').select2({theme: "bootstrap"});
        });
    </script>

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top" role="navigation">
        <a class="navbar-brand" href="#">NombreApp</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggle" aria-controls="navbarToggle" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarToggle">
            <ul class="navbar-nav">
                @if (User.IsInRole("GlobalAdmin"))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="dropdownUsers" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Administradores de atracciones
                        </a>
                        <div class="dropdown-menu" aria-labelledby="dropdownUsers">
                            <a class="dropdown-item" asp-controller="Administrator" asp-action="Search">Administrar</a>
                        </div>
                    </li>

                }

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="dropdownAttractions" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Atracciones turísticas
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdownAttractions">
                        <a class="dropdown-item" asp-controller="TouristAttraction" asp-action="Search">Administrar</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="dropdownSuggestions" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Sugerencias de atracciones
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdownSuggestions">
                        <a class="dropdown-item" asp-controller="Suggestion" asp-action="Search">Administrar</a>
                    </div>
                </li>

            </ul>
            <form class="form-inline my-2 my-lg-0">
                <a class="btn btn-outline-danger my-2 my-sm-0" asp-action="Logout" asp-controller="Account">Cerrar sesión</a>
            </form>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
    @*<div class="row">
        <main class="col-md-9 ml-sm-auto col-lg-10 px-4" role="main">

        </main>
    </div>*@
</body>
</html>
