
@{
    ViewData["Title"] = "Creación de nueva cuenta";
    Layout = null;
}
@model InvitationConfirmationViewModel
<!DOCTYPE html>
<html>
<head>
    @*<meta name="viewport" content="width=device-width" />*@
    <meta name="viewport" content="width=device-width">
    <title>@ViewBag.Title</title>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

    <link rel="stylesheet" asp-href-include="/css/*.css" />
    <link href="~/lib/@@fortawesome/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet"
          asp-href-include="/lib/bootstrap/dist/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid" />
    <link rel="stylesheet" href="~/css/sidenav.css" />
    <script type="text/javascript" src="~/js/index.js"></script>
    <link asp-href-include="/lib/jquery-ui/themes/base/*.css" rel="stylesheet" />
    @*<link href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" rel="stylesheet" />*@
    @*<script src="~/lib/jquery-ui/ui/widgets/autocomplete.js" type="text/javascript"></script>*@
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

</head>
<body>
    <div class="container">
        <br />
        <div class="row">
            <div class="card col-md-6 offset-md-3 col-sm-12">
                <h4 class="card-title">Creación de cuenta de administrador de atracciones turísticas</h4>
                <div class="card-body">
                    <form action="Accept" method="post">
                        <input type="text" name="Token" value="@Model.Token" hidden />
                        @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                        {
                            // Bootstrap 2 = "alert-error", Bootstrap 3 and 4 = "alert-danger"
                            <div class="alert alert-danger alert-dismissible fade show">
                                @Html.ValidationSummary(false, "Errores de validación:")
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>

                            </div>
                        }
                        <div class="form-group">
                            <label for="Administrator_Name">Nombre</label>
                            <input type="text" asp-for="@Model.Administrator.Name" required class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="Administrator_Lastname">Apellido</label>
                            <input type="text" asp-for="@Model.Administrator.Lastname" required class="form-control" />
                        </div>

                        <div class="form-group">
                            <label for="Administrator_Email">Correo electrónico</label>
                            <input type="email" asp-for="@Model.Administrator.Email" required class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="Administrator_Password">Contraseña</label>
                            <input type="password" asp-for="@Model.Administrator.Password" required class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="Administrator_ConfirmationPassword">Confirmar contraseña</label>
                            <input type="password" asp-for="@Model.Administrator.ConfirmationPassword" required class="form-control" />
                        </div>

                        <button type="submit" class="btn btn-primary text-center">Enviar</button>
                    </form>
                </div>
            </div>

        </div>

    </div>
</body>
</html>
<br/>



